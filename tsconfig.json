{
  "ts-node": {
    "compiler": "ttypescript"
  },
  "extends": "./node_modules/gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "build",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "paths": {
      "@repository/*": [
        "src/repository/*"
      ],
      "@singleton/*": [
        "src/repository/singleton/*"
      ],
      "@model/*": [
        "src/repository/model/*"
      ],
      "@service/*": [
        "src/service/*"
      ],
      "@app/*": [
        "src/*"
      ],
      "@test/*": [
        "test/*"
      ]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}